{
  "name": "@amplify-labs/amplify-js",
  "version": "0.1.44",
  "author": "Amplify Labs",
  "description": "A JavaScript SDK for Amplify Contracts",
  "license": "BSD-3-Clause",
  "main": "dist/nodejs/index.js",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ]
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src/*.ts",
    "build": "npm run lint && ./node_modules/.bin/tsc && npm run rollup",
    "docs": "node ./scripts/amplify-docs.js",
    "prepare": "npm run build",
    "rollup": "./node_modules/.bin/rollup -c rollup.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amplify-labs/contracts.git"
  },
  "keywords": [
    "amplify",
    "invoice factoring",
    "amplify finance",
    "amplify contract",
    "decentralized finance",
    "defi",
    "ethereum"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@amplify-labs"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "codecov": "^3.8.1",
    "docblock-parser": "^1.0.0",
    "eslint": "^7.9.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.4.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "rollup": "^2.15.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "ethers": "^5.4.0"
  }
}